# Backend environment example
# Copy to backend/.env and fill with real values before running in development or production

# Core server
NODE_ENV=development
PORT=5001
CLIENT_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/hiremate_db

# Auth
JWT_SECRET=replace_me_with_a_strong_secret
JWT_EXPIRE=7d

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File handling
MAX_FILE_SIZE=5242880
FILE_GRACE_PERIOD=1800000

# AI provider (Groq/OpenAI used through server code)
GROQ_API_KEY=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Cloud storage (optional; defaults to local)
CLOUD_STORAGE_PROVIDER=local
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_REGION=us-east-1

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# GCP (if using Google Cloud Storage)
GCP_PROJECT_ID=
GCP_KEY_FILE=

# Azure (if using Azure Blob Storage)
AZURE_STORAGE_CONNECTION_STRING=
